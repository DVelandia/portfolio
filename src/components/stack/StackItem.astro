---
import Icon from "@/components/ui/Icon.astro"

const { icon, title } = Astro.props
---

<li
	class="flex flex-col items-center justify-center rounded-2xl transition duration-300 ease-in-out hover:scale-105 hover:bg-gray-200/60 dark:hover:bg-gray-800/70"
>
	<div class="mb-2 size-12">
		<Icon name={icon} class="h-full w-full" />
	</div>
	<span class="text-dark w-full text-center text-sm dark:text-white">{title}</span>
</li>
